<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_estate_wizard" model="ir.ui.view">
        <field name="name">estate.wizard.view</field>
        <field name="model">estate.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group name="offer.wizard" string="Make Offer">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                </group>
                <footer>
                    <button name="action_create_offer" string="Confirm" type="object"
                        class="oe_highlight" />
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
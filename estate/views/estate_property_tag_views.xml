<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TREE VIEW FOR REAL ESTATE TAG -->
    <record id='real_estate_tag_tree' model="ir.ui.view">
        <field name="name">Property TAG tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="estate tag tree" editable="bottom" create="1" edit="1">
                <field name="name" />
            </tree>
        </field>
    </record>

<!--    Action for Property tag -->
    <record id='action_real_estate_property_tag' model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>